{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "outDir": "./dist/esm",
    "declarationDir": "./types"
  },
  "include": [
    "src/**/*"
  ]
}
